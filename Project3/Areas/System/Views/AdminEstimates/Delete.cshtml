@model Project3.Models.Estimate
@{
    ViewData["Title"] = "Delete Estimate";
    Layout = "~/Areas/System/Views/Layout/LayoutAdmin.cshtml";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Delete Estimate</h4>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        Back to List
                    </a>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card">
                    <div class="card-header bg-danger text-white text-center">
                        <h2>@ViewData["Title"]</h2>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Estimate Number:</label>
                            <p>@Model.EstimateNumber</p>
                        </div>
                        <div class="form-group">
                            <label>Vehicle:</label>
                            <p>@Model.Vehicle?.VehicleName ?? "No Vehicle Information"</p> <!-- Null check for Vehicle -->
                        </div>
                        <div class="form-group">
                            <label>Policy Type:</label>
                            <p>@Model.PolicyType?.PolicyName ?? "No Policy Type"</p> <!-- Null check for Policy Type -->
                        </div>
                        <div class="form-group">
                            <label>Warranty:</label>
                            <p>@Model.Warranty?.WarrantyType ?? "No Warranty"</p> <!-- Null check for Warranty -->
                        </div>
                        <div class="form-group">
                            <label>Estimated Cost:</label>
                            <p>@Model.VehicleRate</p>
                        </div>
                        <form asp-action="DeleteConfirmed" method="post">
                            <input type="hidden" asp-for="EstimateNumber" />
                            <div class="alert alert-danger" role="alert">
                                Are you sure you want to delete this estimate?
                            </div>
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
