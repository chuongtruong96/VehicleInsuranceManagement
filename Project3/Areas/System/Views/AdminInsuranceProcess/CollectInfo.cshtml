@model Project3.ModelsView.CollectInfoViewModel
@{
    ViewData["Title"] = "Collect Insurance Information";
    Layout = "~/Areas/System/Views/Layout/LayoutAdmin.cshtml";
}
<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>@ViewData["Title"]</h4>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="CollectInfo" method="post">
                            <div class="form-group">
                                <label for="DriverAge">Driver Age</label>
                                <input type="number" class="form-control" asp-for="DriverAge" />
                                <span asp-validation-for="DriverAge" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="DrivingHistory">Driving History</label>
                                <textarea class="form-control" asp-for="DrivingHistory"></textarea>
                                <span asp-validation-for="DrivingHistory" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="CustomerAdd">Customer Address</label>
                                <input type="text" class="form-control" asp-for="CustomerAdd" />
                                <span asp-validation-for="CustomerAdd" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Usage">Usage</label>
                                <input type="text" class="form-control" asp-for="Usage" />
                                <span asp-validation-for="Usage" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="AntiTheftDevice">Anti-Theft Device</label>
                                <input type="checkbox" asp-for="AntiTheftDevice" />
                                <span asp-validation-for="AntiTheftDevice" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="MultiPolicy">Multi-Policy Discount</label>
                                <input type="checkbox" asp-for="MultiPolicy" />
                                <span asp-validation-for="MultiPolicy" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="SafeDriver">Safe Driver Discount</label>
                                <input type="checkbox" asp-for="SafeDriver" />
                                <span asp-validation-for="SafeDriver" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-success">Next</button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
