@model Project3.Models.CompanyBillingPolicy

@{
    ViewData["Title"] = "Delete Billing Policy";
    Layout = "~/Areas/System/Views/Layout/LayoutAdmin.cshtml";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>@ViewData["Title"]</h4>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <a asp-action="Index" class="btn btn-rounded btn-secondary">
                        Back to List
                    </a>
                </ol>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <p class="text-center">Are you sure you want to delete this billing policy?</p>
                        <dl class="row">
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CustomerName)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.CustomerName)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PolicyNumber)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.PolicyNumber)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CustomerAddProve)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.CustomerAddProve)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CustomerPhoneNumber)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.CustomerPhoneNumber)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.BillNo)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.BillNo)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.VehicleName)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.VehicleName)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.VehicleModel)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.VehicleModel)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.VehicleRate)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.VehicleRate)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.VehicleBodyNumber)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.VehicleBodyNumber)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.VehicleEngineNumber)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.VehicleEngineNumber)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Date)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Date)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Amount)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Amount)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PaymentStatus)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.PaymentStatus)</dd>
                        </dl>

                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="Id" />
                            <div class="text-right">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
