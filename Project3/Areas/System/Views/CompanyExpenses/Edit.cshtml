@model Project3.Models.CompanyExpense
@{
    ViewData["Title"] = "Edit Company Expense";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-white text-center">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div class="form-group">
                            <label for="DateOfExpense">Date of Expense</label>
                            <input type="date" class="form-control" asp-for="DateOfExpenses" />
                            <span asp-validation-for="DateOfExpenses" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="TypeOfExpense">Type of Expense</label>
                            <input type="text" class="form-control" asp-for="TypeOfExpense" />
                            <span asp-validation-for="TypeOfExpense" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="AmountOfExpense">Amount of Expense</label>
                            <input type="number" class="form-control" asp-for="AmountOfExpense" />
                            <span asp-validation-for="AmountOfExpense" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
