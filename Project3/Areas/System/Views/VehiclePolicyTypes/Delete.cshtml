@model Project3.Models.VehiclePolicyType

@{
    ViewData["Title"] = "Delete Vehicle Policy Type";
    Layout = "~/Areas/System/Views/Layout/LayoutAdmin.cshtml";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>@ViewData["Title"]</h4>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <a asp-action="Index" class="btn btn-rounded btn-secondary">
                        Back to List
                    </a>
                </ol>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-danger text-white text-center">
                        <h2>@ViewData["Title"]</h2>
                    </div>
                    <div class="card-body">
                        <h4 class="text-center">Are you sure you want to delete this vehicle policy type?</h4>
                        <dl class="row mt-4">
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PolicyName)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.PolicyName)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PolicyDetails)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.PolicyDetails)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.VehicleRate)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.VehicleRate)</dd>
                        </dl>
                        <form asp-action="Delete" method="post" class="text-right mt-3">
                            <input type="hidden" asp-for="PolicyTypeId" />
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
