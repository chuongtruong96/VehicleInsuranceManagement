
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/LayoutUser/LayoutUser.cshtml";
}

<section class="page-title bg-1">
	<div class="overlay"></div>
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="block text-center">
					<span class="text-white">About Us</span>
					<h1 class="text-capitalize mb-5 text-lg">About Us</h1>
				</div>
			</div>
		</div>
	</div>
</section>

<section class="section about-page">
	<div class="container">
		<div class="row">
			<div class="col-lg-4">
				<h2 class="title-color">Your Trusted Partner for Car Insurance</h2>
			</div>
			<div class="col-lg-8">
				<p>We provide comprehensive car insurance solutions tailored to your needs. Our team is dedicated to offering you the best coverage options and exceptional service to protect your vehicle and ensure peace of mind.</p>
				<img src="images/about/sign.png" alt="" class="img-fluid">
			</div>
		</div>
	</div>
</section>

<section class="fetaure-page">
	<div class="container">
		<div class="row">
			<div class="col-lg-3 col-md-6">
				<div class="about-block-item mb-5 mb-lg-0">
					<img src="~/FE/images/about/acc.jpg" alt="" class="img-fluid w-100">
					<h4 class="mt-3">Comprehensive Coverage</h4>
					<p>Our policies provide extensive coverage options to ensure that you’re protected against a wide range of risks.</p>
				</div>
			</div>
			<div class="col-lg-3 col-md-6">
				<div class="about-block-item mb-5 mb-lg-0">
					<img src="~/FE/images/about/acc2.jpg" alt="" class="img-fluid w-100">
					<h4 class="mt-3">Affordable Rates</h4>
					<p>We offer competitive pricing on all our car insurance plans, ensuring you get great value for your money.</p>
				</div>
			</div>
			<div class="col-lg-3 col-md-6">
				<div class="about-block-item mb-5 mb-lg-0">
					<img src="~/FE/images/about/accident.jpg" alt="" class="img-fluid w-100">
					<h4 class="mt-3">Easy Online Claims</h4>
					<p>File your claims quickly and easily through our online platform, making the process hassle-free and efficient.</p>
				</div>
			</div>
			<div class="col-lg-3 col-md-6">
				<div class="about-block-item">
					<img src="~/FE/images/about/Car-crash.jpg" alt="" class="img-fluid w-100">
					<h4 class="mt-3">Expert Advice</h4>
					<p>Our experienced team is here to provide personalized advice and help you choose the right insurance plan for your needs.</p>
				</div>
			</div>
		</div>
	</div>
</section>

