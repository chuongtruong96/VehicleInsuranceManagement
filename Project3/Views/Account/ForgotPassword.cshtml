@model Project3.ModelsView.Identity.ForgotPasswordViewModel;

@{

    Layout = "~/Views/LayoutUser/LayoutSecure.cshtml";
}


    <style>


        .btn-login {
            font-size: 0.9rem;
            letter-spacing: 0.05rem;
            padding: 0.75rem 1rem;
        }

        .btn-google {
            color: white !important;
            background-color: #ea4335;
        }

        .btn-facebook {
            color: white !important;
            background-color: #3b5998;
        }
    </style>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card border-0 shadow rounded-3 my-5">
                    <div class="card-body p-4 p-sm-5">
                        <h2 class="card-title text-center mb-5 ">Reset password</h2>
                        <form asp-action="ForgotPassword" method="post">

                            <div class="form-floating mb-3">
                                <input class="form-control" asp-for="Email" placeholder="name@email.com">
                                <span asp-validation-for="Email" class="text-danger"></span>

                                <label for="floatingInput">Email </label>
                            </div>
                            <div class="d-grid">

                                <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit"><i class="fa-solid fa-right-to-bracket px-2"></i>Send</button>
                            </div>
                        </form>


                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
