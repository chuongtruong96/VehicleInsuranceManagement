@model Project3.ModelsView.Identity.LoginUserViewModel;

@{
    
    Layout = "~/Views/LayoutUser/LayoutSecure.cshtml";
}


    <style>


        .btn-login {
            font-size: 0.9rem;
            letter-spacing: 0.05rem;
            padding: 0.75rem 1rem;
        }

        .btn-google {
            color: white !important;
            background-color: #ea4335;
        }

        .btn-facebook {
            color: white !important;
            background-color: #3b5998;
        }
    </style>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                @{
                    if (TempData["ForgotPasswordMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["ForgotPasswordMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                }

                @{
                    if (TempData["ResetPasswordConfirmation"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["ResetPasswordConfirmation"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                }
            @{
                if (TempData["ConfirmEmailSent"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["ConfirmEmailSent"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            }
            @{
                if (TempData["ConfirmEmailSuccess"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["ConfirmEmailSuccess"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            }
                <div class="card border-0 shadow rounded-3 my-5">
                    <div class="card-body p-4 p-sm-5">
                        <h2 class="card-title text-center mb-5 ">Login</h2>
                        <form asp-action="Login" method="post">
                            <div class="form-floating mb-3">
                                <input class="form-control" asp-for="Email" placeholder="name@email.com">
                                <span asp-validation-for="Email" class="text-danger"></span>


                                <label for="floatingInput">Email </label>
                            </div>
                            <div class="form-floating mb-3">
                            <input type="password" id="password" class="form-control" asp-for="Password" placeholder="Password">
                            <input type="checkbox" id="showPassword" /> Show password
                                <span asp-validation-for="Password" class="text-danger"></span>


                                <label for="floatingPassword">Password</label>
                            </div>

                            <div class="d-flex justify-content-between flex-wrap my-3">
                                <div class=" text-wrap">
                                    <a asp-action="ForgotPassword" class="text-dark">Forgot Password?</a>
                                </div>
                                <div class="text-wrap">
                                    <span>Do not have an account ?</span> <a asp-controller="Account" asp-action="Register" class="text-dark">Register</a>
                                </div>
                            </div>

                            <div class="d-grid">

                                <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit"><i class="fa-solid fa-right-to-bracket px-2"></i>Login</button>
                            </div>
                        </form>

                        <hr class="my-4">
                        <div class="d-grid mb-2">
                        <a asp-action="LoginWithGoogle" asp-controller="Account" class="btn btn-google btn-login text-uppercase fw-bold">
                                <i class="fab fa-google me-2"></i> Sign in with Google
                            </a>
                        </div>
                        @*      <div class="d-grid">
                        <button class="btn btn-facebook btn-login text-uppercase fw-bold" type="submit">
                        <i class="fab fa-facebook-f me-2"></i> Sign in with Facebook
                        </button>
                        </div> *@
                    </div>
                </div>
            </div>
        </div>
    </div>



