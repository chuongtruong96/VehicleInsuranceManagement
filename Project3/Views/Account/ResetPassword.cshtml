@model Project3.ModelsView.Identity.ResetPasswordViewModel;

@{

    Layout = "~/Views/LayoutUser/LayoutSecure.cshtml";
}


    <style>


        .btn-login {
            font-size: 0.9rem;
            letter-spacing: 0.05rem;
            padding: 0.75rem 1rem;
        }

        .btn-google {
            color: white !important;
            background-color: #ea4335;
        }

        .btn-facebook {
            color: white !important;
            background-color: #3b5998;
        }
    </style>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card border-0 shadow rounded-3 my-5">
                    <div class="card-body p-4 p-sm-5">
                        <h2 class="card-title text-center mb-5 ">Reset password</h2>
                        <form asp-action="ResetPassword" method="post">
                            <input type="hidden" asp-for="Token" />
                            <input type="hidden" asp-for="Email" />
                            <div class="form-floating mb-3">
                            <input class="form-control" id="password" asp-for="Password">
                            <input type="checkbox" id="showPassword" /> Show password
                                <p>Please ensure your password meets the following criteria:</p>
                                <ul>
                                    <li>At least 6 characters long</li>
                                    <li>Contains at least one lowercase letter</li>
                                </ul>
                                <span asp-validation-for="Password" class="text-danger"></span>

                                <label for="floatingInput">Password </label>
                                <div class="text-danger">
                                    @if (ViewData.ModelState.ContainsKey("PasswordTooShort"))
                                    {
                                        <span>@ViewData.ModelState["PasswordTooShort"].Errors.First().ErrorMessage</span>
                                    }

                                    @if (ViewData.ModelState.ContainsKey("PasswordRequiresLower"))
                                    {
                                        <span>@ViewData.ModelState["PasswordRequiresLower"].Errors.First().ErrorMessage</span>
                                    }


                                </div>
                            </div>
                            <div class="form-floating mb-3">
                            <input class="form-control" id="confirm" asp-for="ConfirmPassword">
                            <input type="checkbox" id="showConfirm" /> Show password
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                                <label for="floatingInput">ConfirmPassword </label>
                            </div>
                            <div class="d-grid">

                                <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit"><i class="fa-solid fa-right-to-bracket px-2"></i>Reset Password</button>
                            </div>
                        </form>


                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

