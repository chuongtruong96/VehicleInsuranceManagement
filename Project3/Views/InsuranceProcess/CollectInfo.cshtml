@model Project3.ModelsView.CollectInfoViewModel

@{
    ViewData["Title"] = "Collect Insurance Information";
    Layout = "~/Views/LayoutUser/LayoutUser.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">@ViewData["Title"]</h1>

    <form asp-action="CollectInfo" method="post">
        <div class="row">
            <!-- Left Column -->
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="VehicleRate" class="control-label">Vehicle Rate <i class="fa fa-dollar-sign text-primary"></i></label>
                    <input asp-for="VehicleRate" class="form-control" readonly />
                    <span asp-validation-for="VehicleRate" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="DriverAge" class="control-label">Driver Age <i class="fa fa-calendar-alt text-primary"></i></label>
                    <input asp-for="DriverAge" class="form-control" />
                    <span asp-validation-for="DriverAge" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="DriverGender" class="control-label">Driver Gender <i class="fa fa-venus-mars text-primary"></i></label>
                    <select asp-for="DriverGender" class="form-control">
                        <option value="">Select Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                    <span asp-validation-for="DriverGender" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="DrivingHistory" class="control-label">Driving History <i class="fa fa-history text-primary"></i></label>
                    <input asp-for="DrivingHistory" class="form-control" />
                    <span asp-validation-for="DrivingHistory" class="text-danger"></span>
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="CustomerAdd" class="control-label">Customer Address <i class="fa fa-map-marker-alt text-primary"></i></label>
                    <select asp-for="CustomerAdd" class="form-control">
                        <option value="Urban">Urban</option>
                        <option value="Rural">Rural</option>
                    </select>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Usage" class="control-label">Vehicle Usage <i class="fa fa-car text-primary"></i></label>
                    <select asp-for="Usage" class="form-control">
                        <option value="">Select Usage</option>
                        <option value="Daily">Daily</option>
                        <option value="Occasional">Occasional</option>
                    </select>
                    <span asp-validation-for="Usage" class="text-danger"></span>
                </div>
                <div class="form-group form-check mb-3">
                    <input asp-for="AntiTheftDevice" type="checkbox" class="form-check-input" />
                    <label asp-for="AntiTheftDevice" class="form-check-label">Anti-Theft Device <i class="fa fa-shield-alt text-primary"></i></label>
                    <span asp-validation-for="AntiTheftDevice" class="text-danger"></span>
                </div>
                <div class="form-group form-check mb-3">
                    <input asp-for="MultiPolicy" type="checkbox" class="form-check-input" />
                    <label asp-for="MultiPolicy" class="form-check-label">Multi-Policy Discount <i class="fa fa-tags text-primary"></i></label>
                    <span asp-validation-for="MultiPolicy" class="text-danger"></span>
                </div>
                <div class="form-group form-check mb-3">
                    <input asp-for="SafeDriver" type="checkbox" class="form-check-input" />
                    <label asp-for="SafeDriver" class="form-check-label">Safe Driver Discount <i class="fa fa-thumbs-up text-primary"></i></label>
                    <span asp-validation-for="SafeDriver" class="text-danger"></span>
                </div>
                <div class="form-group form-check mb-3">
                    <input asp-for="SelectedCoverages" type="checkbox" class="form-check-input" />
                    <label asp-for="SelectedCoverages" class="form-check-label">Selected Coverages <i class="fa fa-list text-primary"></i></label>
                    <span asp-validation-for="SelectedCoverages" class="text-danger"></span>
                </div>

                <div class="form-group text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg w-100">
                        <i class="fa fa-check-circle me-2"></i> Submit Information
                    </button>
                    <a asp-controller="Estimate" asp-action="Create" class="btn btn-secondary btn-lg mt-3 w-100">
                        <i class="fa fa-arrow-left me-2"></i> Back
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
