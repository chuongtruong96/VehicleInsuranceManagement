@model Project3.ModelsView.InsuranceProcessViewModel;

@{
    ViewData["Title"] = "Create Insurance Process";
    Layout = "~/Views/LayoutUser/LayoutUser.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">Insurance Process Summary</h1>

    <form asp-action="Create" method="post">
        <input asp-for="CustomerId" type="hidden" />
        <div class="row">
            <!-- Left Column -->
            <div class="col-md-6">
                
                <div class="form-group mb-3">
                    <label asp-for="CustomerName" class="control-label">Customer Name <i class="fa fa-user text-primary"></i></label>
                    <input asp-for="CustomerName" class="form-control" readonly />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="CustomerPhoneNumber" class="control-label">Phone Number <i class="fa fa-phone text-primary"></i></label>
                    <input asp-for="CustomerPhoneNumber" class="form-control" readonly />
                    <span asp-validation-for="CustomerPhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="VehicleId" class="control-label">Vehicle ID <i class="fa fa-car text-primary"></i></label>
                    <input asp-for="VehicleId" class="form-control" readonly />
                    <span asp-validation-for="VehicleId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="VehicleName" class="control-label">Vehicle Name <i class="fa fa-car text-primary"></i></label>
                    <input asp-for="VehicleName" class="form-control" readonly />
                    <span asp-validation-for="VehicleName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="VehicleModel" class="control-label">Vehicle Model <i class="fa fa-cogs text-primary"></i></label>
                    <input asp-for="VehicleModel" class="form-control" readonly />
                    <span asp-validation-for="VehicleModel" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="VehicleRate" class="control-label">Vehicle Rate <i class="fa fa-dollar-sign text-primary"></i></label>
                    <input asp-for="VehicleRate" class="form-control" readonly />
                    <span asp-validation-for="VehicleRate" class="text-danger"></span>
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="WarrantyId" class="control-label">Warranty ID <i class="fa fa-shield-alt text-primary"></i></label>
                    <input asp-for="WarrantyId" class="form-control" readonly />
                    <span asp-validation-for="WarrantyId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="PolicyNumber" class="control-label">Policy Type ID <i class="fa fa-file-alt text-primary"></i></label>
                    <input asp-for="PolicyNumber" class="form-control" readonly />
                    <span asp-validation-for="PolicyNumber" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="PolicyTypeId" class="control-label">Policy Type ID <i class="fa fa-file-alt text-primary"></i></label>
                    <input asp-for="PolicyTypeId" class="form-control" readonly />
                    <span asp-validation-for="PolicyTypeId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="PolicyDate" class="control-label">Policy Date <i class="fa fa-calendar-alt text-primary"></i></label>
                    <input asp-for="PolicyDate" class="form-control" readonly />
                    <span asp-validation-for="PolicyDate" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="PolicyDuration" class="control-label">Policy Duration <i class="fa fa-hourglass-half text-primary"></i></label>
                    <input asp-for="PolicyDuration" class="form-control" readonly />
                    <span asp-validation-for="PolicyDuration" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="VehicleBodyNumber" class="control-label">Vehicle Body Number <i class="fa fa-hashtag text-primary"></i></label>
                    <input asp-for="VehicleBodyNumber" class="form-control" readonly />
                    <span asp-validation-for="VehicleBodyNumber" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="VehicleEngineNumber" class="control-label">Vehicle Engine Number <i class="fa fa-cogs text-primary"></i></label>
                    <input asp-for="VehicleEngineNumber" class="form-control" readonly />
                    <span asp-validation-for="VehicleEngineNumber" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success btn-lg w-50">
                <i class="fa fa-check-circle me-2"></i> Confirm Insurance Process
            </button>
            <a asp-controller="InsuranceProcess" asp-action="CollectInfo" class="btn btn-secondary btn-lg mt-3 w-50">
                <i class="fa fa-arrow-left me-2"></i> Back to Collect Info
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

